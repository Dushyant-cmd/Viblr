<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvHv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<FrameLayout
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/ivVideoPlayer"
    android:tag="VIDEO_FRAGMENT_TAG">


    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:controller_layout_id="@layout/custom_player_controller"
        app:resize_mode="fill"
        app:surface_type="texture_view"
        app:use_controller="true">

    </com.google.android.exoplayer2.ui.PlayerView>
</FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="true"
        android:paddingBottom="48dp"
        android:id="@+id/ns"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >
            <LinearLayout
                android:id="@+id/banner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:gravity="center_vertical"
        android:weightSum="2">
        <TextView
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/tvVideoTitle"
            android:text="@string/new_message_notification_placeholder_text_template"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"/>
        <ImageView
            android:id="@+id/btnMore"
            app:srcCompat="@drawable/ic_icon_more_option"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.3"
            android:layout_margin="8dp"
            android:padding="@dimen/toolbar_elevation"
            android:contentDescription="@string/More" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lluserdeatails"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:id="@+id/forUserCLick"
            >
            <com.veblr.android.veblrapp.ui.CircularImageView
                android:id="@+id/ivUserImage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@color/gray_50"
                android:background="#FFFFFF"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/TitleTextStyle"
                android:text="username"
                />
            <TextView
                android:id="@+id/tvVideoPostedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f2f2f2"
                android:textSize="10sp"
                android:text="Jun 07,2019"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:gravity="center_vertical"
            >
            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/btnFollow"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/toolbar_elevation"
                android:layout_marginRight="@dimen/activity_vertical_margin"

                android:button="@drawable/check_button"
                android:textOff="@string/buttontext_follow"
                android:textOn="@string/title_following"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="3dp"
                android:textAllCaps="false"
                android:textColor="@color/bottombarbackground"
                android:textSize="@dimen/textsize_followbutton"
                android:textStyle="bold"
                android:background="@drawable/follow_button_selector"
                android:layout_marginEnd="2dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lloptions"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/views"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:srcCompat="@drawable/ic_icon_views"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BottomOptionTextStyle"
                android:id="@+id/tvViews"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible">
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llComment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:contentDescription="@string/comments"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_icon_comment" />

            <TextView
                android:id="@+id/tvComments"
                style="@style/BottomOptionTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llLike"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"

            >
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:srcCompat="@drawable/ic_icon_likeheart"
                android:id="@+id/btnLike"
                android:layout_gravity="center"
                android:contentDescription="@string/likes"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BottomOptionTextStyle"
                android:layout_gravity="center"
                android:id="@+id/tvLikes"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llShare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:srcCompat="@drawable/ic_icon_share"
                android:id="@+id/btnShare"
                android:contentDescription="@string/title_share" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tvShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_share"
                style="@style/BottomOptionTextStyle"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:layout_margin="@dimen/toolbar_elevation"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#414141"
        />
    <TextView
        android:id="@+id/tvCommentCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:text="Comments(0)"
        android:layout_margin="@dimen/activity_vertical_margin"
       />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/pbComment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        />
    <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rvCommentList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:listitem="@layout/cardview_comment_listitem"
    tools:itemCount="1"
    />
</RelativeLayout>


    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_margin="4dp">

        <androidx.emoji.widget.EmojiEditText
            android:scrollHorizontally="false"
            android:maxLength="499"
            android:inputType="textCapSentences|textMultiLine"
            android:id="@+id/etComment"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_weight="0.85"
            android:background="@color/gray_50"
            android:hint="   Add a Comment..."
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="18sp" />
        <ImageView
            android:contentDescription="@string/Send"
            android:id="@+id/btnSendComment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:src="@android:drawable/ic_menu_send"/>
        </LinearLayout>
      </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>