<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">
<LinearLayout
    android:id="@+id/llfolllowing"
    android:layout_marginLeft="@dimen/toolbar_elevation"
    android:layout_marginStart="@dimen/toolbar_elevation"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:layout_marginEnd="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:weightSum="3"
    android:gravity="center_vertical"
    >
    <LinearLayout
        android:gravity="center"
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

    <com.veblr.android.veblrapp.ui.CircularImageView
        android:id="@+id/ivUserChannelIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_user_icon_white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1.8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2"
        >
    <TextView
        android:layout_weight="1.6"
        android:id="@+id/tvUserChannelname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="Fame School Of Style and fashion"
        android:ellipsize="end"
        android:maxLines="1"
        />
    <ImageView
        android:layout_weight="0.2"
        android:id="@+id/ivUserChannelVerified"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_channel_verify_icon"/>
    </LinearLayout>
<!--    <Button
        android:id="@+id/btnUserFollowed"
        android:layout_weight="0.7"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:text="following"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="3dp"
        android:textAllCaps="false"
        android:textColor="@color/bottombarbackground"
        android:textSize="@dimen/textsize_followbutton"
        android:textStyle="bold"
        android:background="@drawable/follow_button_selector"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp" />-->
    <androidx.appcompat.widget.AppCompatToggleButton
        android:id="@+id/btnUserFollowed"
        android:layout_weight="0.7"
        android:layout_width="0dp"
        android:layout_height="24dp"

        android:button="@drawable/check_button"
        android:textOff="@string/buttontext_follow"
        android:textOn="@string/title_following"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="3dp"
        android:textAllCaps="false"
        android:textColor="@color/bottombarbackground"
        android:textSize="@dimen/textsize_followbutton"
        android:textStyle="bold"
        android:background="@drawable/follow_button_selector"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp" />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#414141"
        />
</LinearLayout>